<div class="container">
    {{#each article}}
        <div class="card">
            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-lg-12 card-block">
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div>
                <div class="col-lg-12 m-2">
                    <button class="btn btn-success m-2 view-comments" data-id="{{this._id}}">Comments</button>
                    {{#if saved}}
                        <button class="btn btn-secondary m-2 disabled">Saved</button>
                    {{else}}
                        <button class="btn btn-success m-2 btn-save" data-id="{{this._id}}">Save</button>
                    {{/if}}
                </div>
            </div>
            <hr>
        </div>
    {{/each}}
</div>

<div class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>