<div class="container">
    {{#each article}}
        <div class="card">
            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-lg-12 card-block">
                    <p class="card-text">{{this.summary}}</p>
                    <a href="https://www.npr.org{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div> 
                <div class="col-lg-12 m-2">
                    <button class="btn btn-danger m-2 btn-remove" data-id="{{this._id}}">Delete</button>
                    <button class="btn btn-success m-2 view-comments" data-id="{{this._id}}">Comments</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<div class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>